##'Components.Aphid.Library.ReflectionLibrary';
#'Dbg';

reflection.mix = @(src, dst) {
	for (m in reflection.members(src)) {
		dst.{m} = src.{m};
		reflection.mix(src.{m}, dst.{m});
	}
};

reflection.getMember = @(obj, path) {	
	val = obj;
	parts = path.split('.');

	for (p in parts) {		
		val = val.{p};
	}

	ret val;
};